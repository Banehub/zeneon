{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/server",
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
} 